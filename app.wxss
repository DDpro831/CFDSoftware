page {
  background: #f3f8ff;
  color: #2b3a55;
  font-family: -apple-system, BlinkMacSystemFont, "PingFang SC", "Helvetica Neue", Arial, sans-serif;
}

.card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(80, 126, 196, 0.12);
  border: 1rpx solid #e7eefb;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
  color: #25406b;
}

.btn-primary {
  background: linear-gradient(90deg, #66a6ff, #8ec5ff);
  color: #ffffff;
  border-radius: 14rpx;
  margin-top: 16rpx;
  border: none;
}

.kv-row {
  display: flex;
  justify-content: space-between;
  margin-top: 8rpx;
  font-size: 26rpx;
  color: #3b5278;
}
