page {
  background: #0f1115;
  color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, "PingFang SC", "Helvetica Neue", Arial, sans-serif;
}

.card {
  background: #1b1d23;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 6rpx 24rpx rgba(0, 0, 0, 0.25);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.btn-primary {
  background: #07c160;
  color: #fff;
  border-radius: 12rpx;
  margin-top: 16rpx;
}

.kv-row {
  display: flex;
  justify-content: space-between;
  margin-top: 8rpx;
  font-size: 26rpx;
}
