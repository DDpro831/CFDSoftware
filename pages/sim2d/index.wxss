.container {
  padding: 24rpx;
}

.form-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.label {
  color: #c7ced8;
  font-size: 26rpx;
}

.input {
  width: 220rpx;
  background: #10141c;
  border: 1rpx solid #2d323b;
  border-radius: 10rpx;
  padding: 12rpx 16rpx;
  font-size: 26rpx;
  color: #ffffff;
}

.canvas-card {
  margin-bottom: 30rpx;
}

.canvas {
  width: 600rpx;
  height: 600rpx;
  border: 1rpx solid #2d323b;
  border-radius: 8rpx;
  background: #0d1117;
}

.tips {
  margin-top: 12rpx;
  color: #a9b0bb;
  font-size: 22rpx;
}

.result {
  margin-top: 14rpx;
  border-top: 1rpx solid #2d323b;
  padding-top: 10rpx;
}
