.container {
  padding: 24rpx;
}

.chat-box {
  min-height: 500rpx;
  background: #f8fbff;
  border: 1rpx solid #dbe8fb;
  border-radius: 12rpx;
  padding: 16rpx;
  margin-bottom: 16rpx;
}

.msg {
  max-width: 85%;
  padding: 12rpx 16rpx;
  border-radius: 12rpx;
  margin-bottom: 10rpx;
  font-size: 25rpx;
  line-height: 1.5;
  color: #2f476f;
}

.msg.user {
  margin-left: auto;
  background: #cfe5ff;
}

.msg.assistant {
  background: #eaf3ff;
}

.input-row {
  display: flex;
  gap: 10rpx;
  align-items: center;
}

.input {
  flex: 1;
  background: #f8fbff;
  border: 1rpx solid #d7e5fb;
  border-radius: 10rpx;
  padding: 12rpx 16rpx;
  font-size: 25rpx;
}

.send {
  margin: 0;
  width: 140rpx;
}
