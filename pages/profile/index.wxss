.container {
  padding: 24rpx;
}

.welcome {
  padding-top: 6rpx;
}

.hint {
  display: block;
  color: #6f84a8;
  font-size: 24rpx;
  line-height: 1.6;
  margin-bottom: 12rpx;
}

.secondary {
  background: #a5c8ff;
}

.profile-box {
  margin-bottom: 16rpx;
  padding: 16rpx;
  border: 1rpx solid #dbe8fb;
  border-radius: 12rpx;
  background: #f7fbff;
  display: flex;
  gap: 14rpx;
  align-items: center;
}

.avatar {
  width: 92rpx;
  height: 92rpx;
  border-radius: 50%;
  border: 2rpx solid #cfe2ff;
}

.profile-info {
  flex: 1;
}
