.container {
  padding: 24rpx;
}

.form-row {
  margin-bottom: 16rpx;
}

.label {
  display: block;
  color: #c7ced8;
  font-size: 24rpx;
  margin-bottom: 8rpx;
}

.input {
  background: #10141c;
  border: 1rpx solid #2d323b;
  border-radius: 10rpx;
  padding: 12rpx 16rpx;
  font-size: 25rpx;
}

.actions {
  display: flex;
  gap: 12rpx;
}

.secondary {
  background: #2f3542;
}

.profile-box {
  margin-bottom: 16rpx;
  padding: 16rpx;
  border: 1rpx solid #2d323b;
  border-radius: 12rpx;
  background: #11151c;
}
