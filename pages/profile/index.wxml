<view class="container">
  <view class="card">
    <view class="section-title">个人资料</view>

    <view wx:if="{{!isLoggedIn}}">
      <view class="form-row">
        <text class="label">手机号</text>
        <input class="input" placeholder="请输入手机号" value="{{phone}}" bindinput="onPhoneInput" />
      </view>
      <view class="form-row">
        <text class="label">密码</text>
        <input class="input" password="true" placeholder="请输入密码" value="{{password}}" bindinput="onPasswordInput" />
      </view>
      <view class="actions">
        <button class="btn-primary" bindtap="register">注册</button>
        <button class="btn-primary secondary" bindtap="login">登录</button>
      </view>
    </view>

    <view wx:else>
      <view class="profile-box">
        <view class="kv-row"><text>账号</text><text>{{user.phone}}</text></view>
        <view class="kv-row"><text>状态</text><text>已登录</text></view>
      </view>
      <button class="btn-primary secondary" bindtap="logout">退出登录</button>
    </view>
  </view>
</view>
